{
  "meta": {
    "options": {
      "linkedFile": "/views/operators.ejs",
      "linkedForm": "formAddEditOperator"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "OperatorId",
        "name": "OperatorId"
      },
      {
        "type": "text",
        "fieldName": "name",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Operator Name is required."
            },
            "core:maxlength": {
              "param": "50"
            }
          }
        },
        "name": "name"
      },
      {
        "type": "text",
        "fieldName": "op_status",
        "name": "op_status"
      },
      {
        "type": "text",
        "fieldName": "service",
        "name": "service"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "",
        "module": "auth",
        "action": "restrict",
        "options": {
          "provider": "securityLogin",
          "permissions": [
            "write"
          ],
          "loginUrl": "login",
          "forbiddenUrl": "403-forbidden"
        },
        "output": true
      },
      {
        "name": "identity",
        "module": "auth",
        "action": "identify",
        "options": {
          "provider": "securityLogin"
        },
        "output": true,
        "meta": []
      },
      {
        "name": "StatsVal",
        "module": "core",
        "action": "setvalue",
        "options": {
          "value": "{{$_POST.op_status}}"
        },
        "output": true,
        "disabled": true,
        "meta": [],
        "outputType": "text"
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{$_POST.OperatorId != ''}}",
          "then": {
            "steps": {
              "name": "OperatorEdit",
              "module": "dbupdater",
              "action": "update",
              "options": {
                "connection": "postgres_gcpServer",
                "sql": {
                  "type": "update",
                  "values": [
                    {
                      "table": "m_operator",
                      "column": "operator_name",
                      "type": "text",
                      "value": "{{$_POST.name}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "status",
                      "type": "number",
                      "value": "{{$_POST.op_status}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "updated_by",
                      "type": "number",
                      "value": "{{identity}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "updated_on",
                      "type": "datetime",
                      "value": "{{NOW}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "service_id",
                      "type": "number",
                      "value": "{{$_POST.service}}"
                    }
                  ],
                  "table": "m_operator",
                  "wheres": {
                    "condition": "AND",
                    "rules": [
                      {
                        "id": "id",
                        "field": "id",
                        "type": "double",
                        "operator": "equal",
                        "value": "{{$_POST.OperatorId}}",
                        "data": {
                          "column": "id"
                        },
                        "operation": "="
                      }
                    ],
                    "conditional": null,
                    "valid": true
                  },
                  "query": "UPDATE m_operator\nSET operator_name = :P1 /* {{$_POST.name}} */, status = :P2 /* {{$_POST.op_status}} */, updated_by = :P3 /* {{identity}} */, updated_on = :P4 /* {{NOW}} */, service_id = :P5 /* {{$_POST.service}} */\nWHERE id = :P6 /* {{$_POST.OperatorId}} */",
                  "params": [
                    {
                      "name": ":P1",
                      "type": "expression",
                      "value": "{{$_POST.name}}"
                    },
                    {
                      "name": ":P2",
                      "type": "expression",
                      "value": "{{$_POST.op_status}}"
                    },
                    {
                      "name": ":P3",
                      "type": "expression",
                      "value": "{{identity}}"
                    },
                    {
                      "name": ":P4",
                      "type": "expression",
                      "value": "{{NOW}}"
                    },
                    {
                      "name": ":P5",
                      "type": "expression",
                      "value": "{{$_POST.service}}"
                    },
                    {
                      "operator": "equal",
                      "type": "expression",
                      "name": ":P6",
                      "value": "{{$_POST.OperatorId}}"
                    }
                  ]
                }
              },
              "meta": [
                {
                  "name": "affected",
                  "type": "number"
                }
              ],
              "output": true
            }
          },
          "else": {
            "steps": {
              "name": "OperatorAdd",
              "module": "dbupdater",
              "action": "insert",
              "options": {
                "connection": "postgres_gcpServer",
                "sql": {
                  "type": "insert",
                  "values": [
                    {
                      "table": "m_operator",
                      "column": "operator_name",
                      "type": "text",
                      "value": "{{$_POST.name}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "service_id",
                      "type": "number",
                      "value": "{{$_POST.service}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "status",
                      "type": "number",
                      "value": "{{$_POST.op_status}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "created_by",
                      "type": "number",
                      "value": "{{identity}}"
                    },
                    {
                      "table": "m_operator",
                      "column": "created_on",
                      "type": "datetime",
                      "value": "{{NOW}}"
                    }
                  ],
                  "table": "m_operator",
                  "returning": "id",
                  "query": "INSERT INTO m_operator\n(operator_name, service_id, status, created_by, created_on) VALUES (:P1 /* {{$_POST.name}} */, :P2 /* {{$_POST.service}} */, :P3 /* {{$_POST.op_status}} */, :P4 /* {{identity}} */, :P5 /* {{NOW}} */)",
                  "params": [
                    {
                      "name": ":P1",
                      "type": "expression",
                      "value": "{{$_POST.name}}"
                    },
                    {
                      "name": ":P2",
                      "type": "expression",
                      "value": "{{$_POST.service}}"
                    },
                    {
                      "name": ":P3",
                      "type": "expression",
                      "value": "{{$_POST.op_status}}"
                    },
                    {
                      "name": ":P4",
                      "type": "expression",
                      "value": "{{identity}}"
                    },
                    {
                      "name": ":P5",
                      "type": "expression",
                      "value": "{{NOW}}"
                    }
                  ]
                }
              },
              "meta": [
                {
                  "name": "identity",
                  "type": "text"
                },
                {
                  "name": "affected",
                  "type": "number"
                }
              ],
              "output": true
            }
          }
        },
        "outputType": "boolean"
      }
    ]
  }
}