{
  "meta": {
    "options": {
      "linkedFile": "/views/login.ejs",
      "linkedForm": "formLogin"
    },
    "$_POST": [
      {
        "type": "number",
        "fieldName": "Mobile",
        "options": {
          "rules": {}
        },
        "name": "Mobile"
      },
      {
        "type": "text",
        "fieldName": "Password",
        "options": {
          "rules": {}
        },
        "name": "Password"
      },
      {
        "type": "text",
        "fieldName": "remember",
        "name": "remember"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "getSalt",
        "module": "dbconnector",
        "action": "single",
        "options": {
          "connection": "postgres_gcpServer",
          "sql": {
            "type": "SELECT",
            "columns": [
              {
                "table": "m_users",
                "column": "salt",
                "alias": "saltvalue"
              }
            ],
            "table": {
              "name": "m_users"
            },
            "joins": [],
            "query": "SELECT salt AS saltvalue\nFROM m_users\nWHERE user_mobile = :P1 /* {{$_POST.Mobile}} */ AND user_type = 0",
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{$_POST.Mobile}}"
              }
            ],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "m_users.user_mobile",
                  "field": "m_users.user_mobile",
                  "type": "string",
                  "operator": "equal",
                  "value": "{{$_POST.Mobile}}",
                  "data": {
                    "table": "m_users",
                    "column": "user_mobile",
                    "type": "text"
                  },
                  "operation": "="
                },
                {
                  "id": "m_users.user_type",
                  "field": "m_users.user_type",
                  "type": "double",
                  "operator": "equal",
                  "value": 0,
                  "data": {
                    "table": "m_users",
                    "column": "user_type",
                    "type": "number"
                  },
                  "operation": "="
                }
              ],
              "conditional": null,
              "valid": true
            }
          }
        },
        "output": true,
        "meta": [
          {
            "name": "saltvalue",
            "type": "text"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{getSalt}}",
          "then": {
            "steps": {
              "name": "identity",
              "module": "auth",
              "action": "login",
              "options": {
                "provider": "securityLogin",
                "password": "{{$_POST.Password.sha256(getSalt.saltvalue)}}",
                "username": "{{$_POST.Mobile}}"
              },
              "output": true,
              "meta": []
            }
          },
          "else": {
            "steps": [
              {
                "name": "LoginRes403",
                "module": "core",
                "action": "response",
                "options": {
                  "status": 403,
                  "data": "User does not exists"
                }
              },
              {
                "name": "Login",
                "module": "core",
                "action": "redirect",
                "options": {
                  "url": "/login"
                },
                "disabled": true
              }
            ]
          }
        },
        "outputType": "boolean",
        "output": true
      }
    ]
  }
}