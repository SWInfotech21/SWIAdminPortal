{
  "meta": {
    "options": {
      "linkedFile": "/views/login.ejs",
      "linkedForm": "formLogin"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "Email",
        "options": {
          "rules": {
            "core:email": {}
          }
        },
        "name": "Email"
      },
      {
        "type": "text",
        "fieldName": "Password",
        "options": {
          "rules": {
            "core:required": {
              "param": "",
              "message": "Please enter your password"
            }
          }
        },
        "name": "Password"
      },
      {
        "type": "text",
        "fieldName": "remember",
        "name": "remember"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "getSalt",
        "module": "dbconnector",
        "action": "single",
        "options": {
          "connection": "postgres_gcpServer",
          "sql": {
            "type": "SELECT",
            "columns": [
              {
                "table": "m_users",
                "column": "salt",
                "alias": "saltvalue"
              }
            ],
            "table": {
              "name": "m_users"
            },
            "joins": [],
            "query": "SELECT salt AS saltvalue\nFROM m_users\nWHERE user_email = :P1 /* {{$_POST.Email.lowercase()}} */",
            "params": [
              {
                "operator": "equal",
                "type": "expression",
                "name": ":P1",
                "value": "{{$_POST.Email.lowercase()}}"
              }
            ],
            "wheres": {
              "condition": "AND",
              "rules": [
                {
                  "id": "m_users.user_email",
                  "field": "m_users.user_email",
                  "type": "string",
                  "operator": "equal",
                  "value": "{{$_POST.Email.lowercase()}}",
                  "data": {
                    "table": "m_users",
                    "column": "user_email",
                    "type": "text"
                  },
                  "operation": "="
                }
              ],
              "conditional": null,
              "valid": true
            }
          }
        },
        "output": true,
        "meta": [
          {
            "name": "saltvalue",
            "type": "text"
          }
        ],
        "outputType": "object"
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{getSalt}}",
          "then": {
            "steps": {
              "name": "identity",
              "module": "auth",
              "action": "login",
              "options": {
                "provider": "securityLogin",
                "password": "{{$_POST.Password.sha256(getSalt.saltvalue.decrypt('Hw3fTCdch1'))}}",
                "username": "{{$_POST.Email.lowercase()}}"
              },
              "output": true,
              "meta": []
            }
          },
          "else": {
            "steps": {
              "name": "LoginRes403",
              "module": "core",
              "action": "response",
              "options": {
                "status": 403,
                "data": "User does not exists"
              }
            }
          }
        },
        "outputType": "boolean",
        "output": true
      }
    ]
  }
}