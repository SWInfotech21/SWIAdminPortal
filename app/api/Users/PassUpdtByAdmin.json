{
  "meta": {
    "options": {
      "linkedFile": "/views/users.ejs",
      "linkedForm": "formPassUser"
    },
    "$_POST": [
      {
        "type": "text",
        "fieldName": "UserId",
        "name": "UserId"
      },
      {
        "type": "text",
        "fieldName": "Password",
        "options": {
          "rules": {
            "core:maxlength": {
              "param": "50"
            }
          }
        },
        "name": "Password"
      },
      {
        "type": "text",
        "name": "salt"
      }
    ]
  },
  "exec": {
    "steps": {
      "name": "",
      "module": "core",
      "action": "condition",
      "options": {
        "if": "{{$_POST.UserId}}",
        "then": {
          "steps": {
            "name": "PassUpdate",
            "module": "dbupdater",
            "action": "update",
            "options": {
              "connection": "postgres_gcpServer",
              "sql": {
                "type": "update",
                "values": [
                  {
                    "table": "m_users",
                    "column": "password",
                    "type": "text",
                    "value": "{{$_POST.Password.sha256(NOW)}}"
                  },
                  {
                    "table": "m_users",
                    "column": "salt",
                    "type": "text",
                    "value": "{{NOW}}"
                  },
                  {
                    "table": "m_users",
                    "column": "updated_by",
                    "type": "text",
                    "value": "1"
                  },
                  {
                    "table": "m_users",
                    "column": "updated_on",
                    "type": "datetime",
                    "value": "{{NOW}}"
                  }
                ],
                "table": "m_users",
                "wheres": {
                  "condition": "AND",
                  "rules": [
                    {
                      "id": "id",
                      "field": "id",
                      "type": "double",
                      "operator": "equal",
                      "value": "{{$_POST.UserId}}",
                      "data": {
                        "column": "id"
                      },
                      "operation": "="
                    }
                  ],
                  "conditional": null,
                  "valid": true
                },
                "query": "UPDATE m_users\nSET password = :P1 /* {{$_POST.Password.sha256(NOW)}} */, salt = :P2 /* {{NOW}} */, updated_by = '1', updated_on = :P3 /* {{NOW}} */\nWHERE id = :P4 /* {{$_POST.UserId}} */",
                "params": [
                  {
                    "name": ":P1",
                    "type": "expression",
                    "value": "{{$_POST.Password.sha256(NOW)}}"
                  },
                  {
                    "name": ":P2",
                    "type": "expression",
                    "value": "{{NOW}}"
                  },
                  {
                    "name": ":P3",
                    "type": "expression",
                    "value": "{{NOW}}"
                  },
                  {
                    "operator": "equal",
                    "type": "expression",
                    "name": ":P4",
                    "value": "{{$_POST.UserId}}"
                  }
                ]
              }
            },
            "meta": [
              {
                "name": "affected",
                "type": "number"
              }
            ],
            "output": true
          }
        }
      },
      "outputType": "boolean"
    }
  }
}