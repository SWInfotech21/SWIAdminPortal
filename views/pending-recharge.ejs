<dmx-serverconnect id="scServices" url="api/Services/Services"></dmx-serverconnect>

<dmx-serverconnect id="scPendingRech" url="api/Reports/PendingRecharge" dmx-param:fromdate="inpFromDate.value" dmx-param:todate="inpToDate.value"></dmx-serverconnect>

<div class="row align-items-center justify-content-between px-4 mb-3 sd-secondary-header mx-0">
    <div class="col-12 col-md-auto me-auto ps-4">
        <h1 class="ms-md-1 mt-md-3 text-dark fs-2 sd-fw-800 d-flex align-items-center">
            Pending Recharges
            <span class="border-3 ms-2 spinner-border spinner-border-sm" role="status" dmx-show="scPatients.state.executing"></span>
        </h1>
    </div>
    <div class="col-auto order-2 order-md-1 d-flex align-items-center justify-content-start justify-content-md-center px-0 px-lg-2">
        <label>From Date:</label><input type="date" name="fromdate" id="inpFromDate" dmx-bind:value="dateNow.datetime.formatDate('yyyy-MM-dd')" class="w-25" required="">
        &emsp;<label>To Date:</label><input type="date" name="todate" id="inpToDate" dmx-bind:value="dateNow.datetime.formatDate('yyyy-MM-dd')" class="w-25" required="">
        &emsp;<button id="btnFilter" class="btn btn-primary btn-sm" dmx-on:click="flowPendingRech.run()">Filter</button>
        <button id="btnExport" class="btn btn-dark btn-sm">Export</button>
    </div>
    <div class="col-auto order-1 order-md-3 d-flex align-items-center justify-content-center">
        <form id="formSearchUser" class="sd-search-form">
            <div class="d-flex justify-content-end mb-3 mb-lg-0 mb-md-0">
                <input type="text" class="form-control sd-search-input rounded-pill" id="Search" name="Search" placeholder="Search">
                <span class="bg-transparent btn position-absolute px-1 py-1"><i class="fas fa-search mb-1 mb-xl-0"></i></span>
            </div>
        </form>
    </div>
</div>
<div class="container px-4" id="AccontSummery">
    <div class="card">
        <div class="card-header sw-bg-col-primary">
            <b>Pending Recharges</b>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Sl. No.</th>
                            <th>Tr. Id</th>
                            <th>Tr.By</th>
                            <th>Mobile</th>
                            <th>Operator</th>
                            <th>Opening Balance</th>
                            <th>Amount</th>
                            <th>Comm. Amt</th>
                            <th>Charge. Amt.</th>
                            <th>Net Amt.</th>
                            <th>Closing Balance</th>
                            <th>API</th>
                            <th>Tr. Type</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" id="tableRepeat1" dmx-bind:repeat="scPendingRech.data.GetPendingRech.data">
                        <tr>
                            <td>{{$index+1}}</td>
                            <td dmx-text="id"></td>
                            <td dmx-text="user_id+' | '+user_fname+' | '+user_mobile"></td>
                            <td dmx-text="user_number"></td>
                            <td dmx-text="operator_name"></td>
                            <td dmx-text="opening_balance"></td>
                            <td dmx-text="amount"></td>
                            <td dmx-text="comm_amt"></td>
                            <td dmx-text="charge_amt"></td>
                            <td dmx-text="net_amt"></td>
                            <td dmx-text="closing_balance"></td>
                            <td dmx-text="api_log"></td>
                            <td dmx-text="tr_type"></td>
                            <td dmx-text="tr_date.formatDate('dd-MM-yyyy hh:mm:ss A')"></td>
                            <td><button class="btn btn-success">Reply</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>